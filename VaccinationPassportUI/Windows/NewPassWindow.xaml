        <!--  рядок 5  -->
        <!--  використала об'єкт VaccinationBlock простору імен User_Controls  -->
        <ItemsControl
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            ItemsSource="{DynamicResource FirstVaccinations}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15" />

                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15" />


                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="7"
                            Style="{StaticResource AquaTextBox}">
                            <TextBox.Text>
                                <MultiBinding StringFormat="{}{0}, {1} доза вакцини">
                                    <Binding Path="Vaccine.Disease.DiseaseName" />
                                    <Binding Path="VaccinationNumber" />

                                </MultiBinding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource FieldNameBlock}">
                            дата щеплення, вік
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource FieldNameBlock}">
                            ПІБ медсестри
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="3"
                            Style="{StaticResource FieldNameBlock}">
                            назва вакцини
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Style="{StaticResource FieldNameBlock}">
                            уведена доза, мг
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="5"
                            Style="{StaticResource FieldNameBlock}">
                            термін придатності
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="6"
                            Style="{StaticResource FieldNameBlock}">
                            серійний номер
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="7"
                            Style="{StaticResource FieldNameBlock}">
                            побічні реякції
                        </TextBlock>

                        <TextBox
                            x:Name="VacDate"
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource FatTextBox}"
                            Text="{Binding Source={x:Static sys:DateTime.Now}, Mode=OneWay, StringFormat='dd.MM.yyyy'}" />
                        <TextBox
                            x:Name="Nurse"
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{StaticResource FatTextBox}" />
                        <TextBox
                            x:Name="VacName"
                            Grid.Row="2"
                            Grid.Column="3"
                            Style="{StaticResource FatTextBox}"
                            Text="{Binding Vaccine.VaccineName}" />
                        <TextBox
                            x:Name="Dose"
                            Grid.Row="2"
                            Grid.Column="4"
                            Style="{StaticResource FatTextBox}"
                            Text="{Binding Vaccine.Dose}" />
                        <TextBox
                            x:Name="ExpDate"
                            Grid.Row="2"
                            Grid.Column="5"
                            Style="{StaticResource FatTextBox}" />
                        <TextBox
                            x:Name="SerialNumber"
                            Grid.Row="2"
                            Grid.Column="6"
                            Style="{StaticResource FatTextBox}" />
                        <TextBox
                            x:Name="SideEffects"
                            Grid.Row="2"
                            Grid.Column="7"
                            Style="{StaticResource FatTextBox}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <!--<sys:String>Гепатит Б</sys:String>
            <sys:String>Туберкульоз</sys:String>-->
