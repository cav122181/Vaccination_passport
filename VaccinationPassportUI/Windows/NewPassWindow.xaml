            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Left"
            Click="Cancel_Click"
            Style="{StaticResource AquaButton}">
            Скасувати
        </Button>
        <Button
            x:Name="CreateNewPassportButton"
            Grid.Row="3"
            Grid.Column="2"
            Width="180"
            HorizontalAlignment="Right"
            Click="CreateNewPassportButton_Click"
            Style="{StaticResource AquaButton}">
            Створити новий паспорт
        </Button>


    </Grid>
